<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="SandboxCode.Racers" table="RACERS">
      <meta attribute="class-description">
          This class is an example of using hibernate to map racer info from a database table RACERS to the java class Racers
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="firstName" column="first_name" type="string"/>
      <property name="lastName" column="last_name" type="string"/>
      <property name="elapsedTime" column="elapsed_time" type="int"/>
      <property name="position" column="position" type="int"/>
 </class>
</hibernate-mapping>
